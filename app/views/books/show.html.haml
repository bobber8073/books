%h2= @book.title
%p.author= "by #{@book.author}"
.well
  %p
    = simple_format @book.description
%p
  - if can? :download, @book
    .btn.btn-large.btn-primary.nolink
      %i.icon-download-alt.nolink.whitetxt
      = link_to "Download", download_path(@book), class: "nolink whitetxt", :method => :post

.well
  %div
    Tags: 
    = tag_links(@book)
- if can? :manage, @book
  .btn-group
    .btn
      = link_to "Edit", edit_book_path(@book), class: "blacktxt nolink"
    .btn.btn-danger
      = link_to "Delete", book_path(@book), method: :delete, confirm: "Are you sure? This book will be deleted forever (a long time).", class: "whitetxt nolink"