!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Books"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")
    - favicon_link_tag 'favicon.ico'


  %body
    .navbar-wrapper
      .container
        .navbar.navbar
          .navbar-inner
            %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            %a.brand(href="/")
              %i.icon-book
            .container.nav-collapse
              %ul.nav.pull-right
                %form.navbar-search
                  %input.search-query{:placeholder => "Search", :type => "text", :id => "filter"}
    .container

      .row
        .span9
          = bootstrap_flash
          = yield
          = render_breadcrumbs
        .span3
          .well.sidebar-nav
            %ul.nav.nav-list
              - if current_user
                %li.nav-header
                  Welcome, 
                  = current_user.username
                %li
                  - if can? :create, Book
                    = link_to "Add Book", new_book_path
                %li
                  = link_to "Sign Out", destroy_user_session_path, :method => :delete
              - else
                %li
                  = link_to "Sign In", new_user_session_path
              %li.nav-header I'm Looking For
              - if @tags.empty?
                %li No tags found. Tag some books to find them easier!
              - @tags.each do |tag|
                - if params[:tags] && params[:tags].include?(tag.id.to_s)
                  %li
                    %a.disabled= tag.name
                - else
                  %li= link_to tag.name, tag_path(tag)
      #footer
        %p &copy; Chase Conklin 2013
    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
